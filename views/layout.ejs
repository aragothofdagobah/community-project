                  <input type="text" name="search">
                  <button type="submit" name="button">Search</button>
                </form>
            </div>
        </div>
    </header>

    <!-- main -->
    <main id="site-main">
    <div class="container">
        <%- body %>
    </div>
    </main>

    <!-- footer -->
    <footer id="site-footer">
        Copyright &copy; Community-App
    </footer>

